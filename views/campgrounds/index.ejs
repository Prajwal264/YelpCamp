<%- include("../partials/header") %>
<div class="container">
  <div class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <p>
      View our hand-picked campgrounds from all over the world
    </p>
    <p>
      <a class="btn btn-primary btn-md" href="/campgrounds/new"
        >Add New Campgrounds</a
      >
    </p>
  </div>
  <div class="row text-center justify-content-between">
    <% campgrounds.forEach(function(campground){ %>
    <div class="card col-lg-4 col-md-6 col-xs-12 p-0">
      <img
        class="card-img-top"
        src="<%= campground.image %>"
        alt="<%= campground.name %>"
		style="width: 378; height: 252"
      />
      <div class="card-body">
        <h3 class="card-title"><%= campground.name %></h3>
		<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">more details</a>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<%- include("../partials/footer") %>
