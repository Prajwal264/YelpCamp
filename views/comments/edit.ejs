<%- include("../partials/header"); %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <h1>Edit Comment</h1>
      <form class="my-4" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <lable for="text">Text:</lable>
          <input class="form-control" type="text" id="text" name="comment[text]" value="<%= comment.text %>"/>
        </div>
        <button class="btn btn-outline-success btn-block">Edit</button>
      </form>
    </div>
  </div>
</div>
