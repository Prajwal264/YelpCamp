<%- include("../partials/header"); %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <h1>Add new Comment to <%= campground.name %> </h1>
      <form class="my-4" action="/campgrounds/<%= campground._id%>/comments" method="POST">
        <div class="form-group">
          <lable for="text">Text:</lable>
          <input class="form-control" type="text" id="text" name="comment[text]" />
        </div>
        <button class="btn btn-outline-success btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>
